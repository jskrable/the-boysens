{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": [".yarn/**/*", "*pnp*.*", "*/dist/**/*", ".next/**/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all"
    }
  }
}

generator client {
  provider = "prisma-client-js"
  output = "../db/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Memory {
  id Int @id @default(autoincrement())
  entry String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("memories")
}

enum Repository {
  PUBLIC
}

model Photo {
  id Int @id @default(autoincrement())
  path String
  repository Repository

  @@map("photos")
}

model Script {
  id Int @id @default(autoincrement())
  path String
  repository Repository
  title String
  description String

  @@map("scripts")
}
